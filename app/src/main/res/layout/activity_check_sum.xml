<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFCFC"
    tools:context=".Check_sumActivity">
    <TextView
        android:id="@+id/title"
        android:text="核血作業-總結"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0ADDC9"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/dp_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:text="領血單號 :"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/transop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginRight="90dp"
                android:layout_weight="1"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="姓名 :"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="血型 :"
                android:layout_marginLeft="4dp"
                android:textColor="#504C4C"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bloodtype"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="0dp"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="床號 :"
                android:layout_marginLeft="12dp"
                android:textColor="#504C4C"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bednum"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="年齡 :"
                android:layout_marginLeft="4dp"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/age"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="病歷號 :"
                android:textColor="#504C4C"
                android:layout_marginLeft="12dp"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/qrchart"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="核血人員 :"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/check_background"
                android:layout_marginRight="90dp"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="確認人員 :"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/check_background"
                android:layout_marginRight="90dp"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <View
            android:background="#48000000"
            android:layout_marginTop="20dp"
            android:layout_height="2dp"
            android:layout_width="fill_parent"
            />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/context"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                />
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_weight = "1"
            >

            <Button
                android:id="@+id/frontbt"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="上一步"
                android:textSize="16dp"
                android:background="#6646628A"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_weight = "1">
            <Button
                android:id="@+id/nextbt"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:textSize="18dp"
                android:background="@drawable/nextbutton_general"
                android:text="傳送"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>