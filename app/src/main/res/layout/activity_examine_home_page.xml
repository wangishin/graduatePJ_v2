<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotationX="-360"
    tools:context=".examine_homePage"
    android:background="#FCFCFC"
    android:orientation="vertical">

    <TextView
        android:text="檢驗作業"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#0ADDC9"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/dp_24"/>

    <Button
        android:id="@+id/bloodCollectHome"
        android:layout_width="183dp"
        android:layout_height="87dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_43"
        android:background="@drawable/collectpagebutton"
        android:text="採血/備血"
        android:textSize="23sp" />

    <Button
        android:id="@+id/printExamineHome"
        android:layout_width="183dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_45"
        android:background="@drawable/collectpagebutton"
        android:text="列印檢體編號"
        android:textSize="23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/home"
            android:text="上一步"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:background="@drawable/functionbutton_2"
            android:layout_gravity="bottom"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>